<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.olayinka.smart.tone"
          android:installLocation="internalOnly">

    <uses-feature
            android:name="android.hardware.telephony"
            android:required="true"/>

    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.BIND_ACCESSIBILITY_SERVICE"/>
    <uses-permission android:name="com.android.vending.BILLING"/>


    <application
            android:name=".SmartTone"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app.name"
            android:theme="@style/AppTheme">

        <activity android:name=".MainActivity"
                  android:screenOrientation="portrait"
                  android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data android:scheme="file"/>
                <data android:mimeType="*/*"/>
                <data android:pathPattern=".*\\.smt"/>
                <data android:pathPattern=".*\\..*\\.smt"/>
                <data android:pathPattern=".*\\..*\\..*\\.smt"/>
                <data android:pathPattern=".*\\..*\\..*\\..*\\.smt"/>
                <data android:pathPattern=".*\\..*\\..*\\..*\\..*\\.smt"/>
                <data android:pathPattern=".*\\..*\\..*\\..*\\..*\\..*\\.smt"/>
                <data android:pathPattern=".*\\..*\\..*\\..*\\..*\\..*\\..*\\.smt"/>
                <data android:pathPattern=".*\\..*\\..*\\..*\\..*\\..*\\..*\\..*\\.smt"/>
                <data android:pathPattern=".*\\..*\\..*\\..*\\..*\\..*\\..*\\..*\\..*\\.smt"/>
                <data android:pathPattern=".*\\..*\\..*\\..*\\..*\\..*\\..*\\..*\\..*\\..*\\.smt"/>
                <data android:host="*"/>
            </intent-filter>
        </activity>

        <activity android:name=".activity.MenuActivity"
                  android:screenOrientation="portrait"
                  android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".activity.CollectionEditActivity"
                  android:screenOrientation="portrait"
                  android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".activity.SearchMusicActivity"
                  android:screenOrientation="portrait"
                  android:configChanges="orientation|keyboardHidden">
            <meta-data android:name="android.app.searchable"
                       android:resource="@xml/searchable"/>
        </activity>
        <activity android:name=".activity.MediaGroupActivity"
                  android:screenOrientation="portrait"
                  android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".activity.ContactActivity"
                  android:screenOrientation="portrait"
                  android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".activity.SettingsActivity"
                  android:screenOrientation="portrait"
                  android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".activity.CollectionPageActivity"
                  android:screenOrientation="portrait"
                  android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".activity.AboutAppActivity"
                  android:screenOrientation="portrait"
                  android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".activity.LegalActivity"
                  android:screenOrientation="portrait"
                  android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".activity.OpenSourceLibraries"
                  android:screenOrientation="portrait"
                  android:configChanges="orientation|keyboardHidden"/>

        <service android:exported="false" android:name=".service.IndexerService"/>
        <service android:exported="false" android:name=".service.AppService"/>
        <service android:exported="false" android:name=".service.ShuffleService"
                 android:label="@string/smarttone.service"/>
        <service android:exported="false" android:label="@string/ringtone.service"
                 android:name=".service.RingtoneTelephonyService"/>

        <service android:name=".service.NotifAccessibilityService"
                 android:label="@string/notification.service"
                 android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService"/>
            </intent-filter>
        </service>

        <receiver android:name=".service.BootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

    </application>


</manifest>
