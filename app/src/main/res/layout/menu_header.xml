<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="4dp">

    <android.support.v7.widget.CardView
        android:id="@+id/helpPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="clip_vertical"
                android:padding="8dp"
                android:text="@string/help.page.notice"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/positive"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/text"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_link_black_18dp"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/ic_link_black_18dp"
                android:gravity="center"
                android:text="@string/visit"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/negative"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text"
                android:layout_toLeftOf="@+id/positive"
                android:layout_toStartOf="@+id/positive"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_done_black_18dp"
                android:drawableStart="@drawable/ic_done_black_18dp"
                android:gravity="center"
                android:text="@string/done"
                android:textSize="12sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
